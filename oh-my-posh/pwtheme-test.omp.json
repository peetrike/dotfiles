{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "secondary_prompt": {
    "template": "\u2219 ",
    "foreground": "darkGray",
    "background": "transparent"
  },
  "console_title_template": "{{if .Root}}Admin: {{end}}{{.Shell}} - {{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "properties": {
            "cache_duration": "none",
            "style": "austin",
            "threshold": 1
          },
          "leading_diamond": "\u2590",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .FormattedMs }} ",
          "foreground": "white",
          "background": "blue"
        },
        {
          "type": "path",
          "style": "powerline",
          "properties": {
            "cache_duration": "none",
            "style": "short"
          },
          "template": " {{ path .Path .Location }} ",
          "foreground": "lightWhite",
          "powerline_symbol": "\ue0b0",
          "background": "lightBlue"
        },
        {
          "type": "git",
          "style": "powerline",
          "properties": {
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " {{ .HEAD }} {{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}} \uf692 {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }} ",
          "foreground": "cyan",
          "powerline_symbol": "\ue0b0",
          "background": "white"
        },
        {
          "type": "project",
          "style": "powerline",
          "properties": {
            "cache_duration": "none"
          },
          "powerline_symbol": "\ue0b0",
          "background": "cyan"
        },
        {
          "type": "status",
          "style": "diamond",
          "properties": {
            "always_enabled": false,
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0b4",
          "template": " {{ if gt .Code 0 }}\u2a2f{{ else }}\uf42e{{ end }} ",
          "foreground": "lightWhite",
          "background": "#2e9599",
          "background_templates": [
            "{{ if gt .Code 0 }}lightRed{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          },
          "template": "{{ .CurrentDate | date .Format }}",
          "foreground": "lightWhite"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{.Env.PSHistory}}"
        },
        {
          "type": "shell",
          "style": "plain",
          "properties": {
            "cache_duration": "none",
            "mapped_shell_names": {
              "powershell": "\ue683",
              "pwsh": "\uf4b5"
            }
          },
          "template": " {{.Name}} {{trunc 3 .Version}}"
        },
        {
          "type": "root",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue0a2",
          "foreground": "lightYellow"
        },
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "cache_duration": "none"
          },
          "alias": "Character",
          "template": " ‚ùØ "
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
