{
  // font stuff
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,

  // IntelliSense settings
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",

  // Visual settings
  "editor.renderWhitespace": "boundary",
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark+]": {
      "rules": {
        // make it different from variable
        "parameter": "#D4D4D4",
        "property": "#DCDCAA",
        // unfortunately those don't yet work
        "variable.readonly": "#D4D4D4",
        "variable.constant": "#569CD6"
      }
    }
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Default Dark+",
  "files.associations": {
    "*.config": "xml",
    "*.ps1xml": "xml"
  },

  // terminal config
  "terminal.external.windowsExec": "wt",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "Cascadia Mono PL",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": [
        "-NoLogo"
      ],
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "args": [
        "-NoLogo"
      ],
      "icon": "terminal-powershell"
    },
    "Git Bash": null
  },

  // Workspace trust config
  "security.workspace.trust.emptyWindow": false,
  "extensions.supportUntrustedWorkspaces": {
    "aaron-bond.better-comments": {
      "supported": true
    },
    "ms-cst-e.vscode-devskim": {
      "supported": true
    },
    "ms-vscode.powershell": {
      "supported": true
    },
    "ms-vscode.powershell-preview": {
      "supported": true
    },
    "streetsidesoftware.code-spell-checker": {
      "supported": true
    },
    "redhat.vscode-xml": {
      "supported": true
    }
  },

  // Git config
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.views.repositories.files.layout": "tree",

  "markdownlint.config": {
    "MD024": {
      "siblings_only": true
    }
  },
  "[markdown]": {
    "editor.rulers": [
      80,
      100
    ]
  },

  // PowerShell Extension settings
  "powershell.codeFormatting.preset": "OTBS",
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.integratedConsole.focusConsoleOnExecute": false,

  "powershell.pester.useLegacyCodeLens": false,
  "powershell.sideBar.CommandExplorerVisibility": false,
  "[powershell]": {
    "editor.rulers": [
      80,
      115
    ],

    // until it will be fixed
    "editor.semanticHighlighting.enabled": false,

    // make it select the $ in PowerShell variables
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",

    // for Windows
    "files.encoding": "utf8bom",
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  },

  "xml.fileAssociations": [
    {
      "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Format.xsd",
      "pattern": "**/*.Format.ps1xml"
    },
    {
      "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Types.xsd",
      "pattern": "**/*.Types.ps1xml"
    }
  ],
  "[xml]": {
    //"editor.autoClosingBrackets": "never",
    "editor.tabSize": 2
  },

  "csv-preview.separator": "[,;\\t]",
  "csv-preview.skipComments": true,

  "liveshare.presence": true,
  "liveshare.guestApprovalRequired": true,
  "liveshare.accountProvider": "microsoft",
  "liveshare.account": "meelis.nigols@telia.ee",
  "liveshare.showInStatusBar": "whileCollaborating",
  
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "powershell",
    "xml"
  ],
  "cSpell.userWords": [
    "COMPUTERNAME",
    "Clixml",
    "cmdlet",
    "Meelis",
    "Nigols",
    "datetime",
    "endregion",
    "hashtable",
    "mailaddress",
    "notcontains",
    "notin",
    "notlike",
    "psake",
    "pscustomobject",
    "psobject",
    "snapin",
    "zabbix"
  ],

  "yaml.schemas": {
    "file:///c%3A/Users/cpg4285/.vscode/extensions/atlassian.atlascode-2.8.5/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "atlascode.jira.jqlList": [
    {
      "id": "73384913-d402-466b-8914-88bd4a343644",
      "enabled": true,
      "name": "My jira.atlassian.teliacompany.net Issues",
      "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
      "siteId": "jira.atlassian.teliacompany.net",
      "monitor": true
    }
  ],
  "atlascode.jira.enabled": false
}